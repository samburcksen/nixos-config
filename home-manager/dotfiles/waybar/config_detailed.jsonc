{   
    "margin": "5",
    "spacing": 10,
    
    "reload_style_on_change": true,

    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["clock"],
    "modules-right": [
       "custom/pacman",
        "tray",
        "network",
        "wireplumber",
        "battery",
        "backlight",
        "disk",
        "memory",
        "cpu",
        "temperature",
        "custom/power"
    ],

    "backlight": {
        "interval": 2,
        "format": "󰖨 {percent}%",
        "on-scroll-up": "brightnessctl set +4",
        "on-scroll-down": "brightnessctl set 4-"
    },

    "network": {
        "interval": 10,
        "format-wifi": "{icon}",
        "format-icons": ["󰤯 ", "󰤟 ", "󰤟 ", "󰤥 ", "󰤨 "],
        "format-ethernet": "󰈀 ",
        "format-disconnected": "󰤭 ",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)",
        "on-click": "iwgtk"
    },

   "wireplumber": {
        "format": "{icon}  {volume}%",
        "format-muted": "󰝟 ",
        "on-click": "pavucontrol",
        "format-icons": ["", "", "", "", ""]
    },
    
    "custom/pacman": {
        "format": "{icon}{0}",
        "return-type": "json",
        "format-icons": {
            "pending-updates": " ",
            "updated": " "
        },
        "exec-if": "which waybar-updates",
        "exec": "waybar-updates"
    },

    "battery": {
        "interval": 10,
        "format": "{icon}{capacity}%",
        "format-icons": [ "󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹" ],
        "tooltip": true,
        "tooltip-format": "{timeTo}"
    },

    "disk": {
        "interval": 10,
        "format": "󱛟 {free}",
    },
    
    "memory": {
        "interval": 10,
        "format": " {used}G",
        "tooltip-format": "{used}GiB used of {total}GiB ({percentage}%)"
    },

    "cpu": {
        "interval": 10,
        "format": " {usage}%"
    },

    "temperature": {
        "interval": 10
    },

    "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S}",
        "on-click": "gnome-calendar",
        "tooltip": false
    },

    "custom/power": {
        "format": "⏻ ",
        "on-click": "wlogout"
    },

    "hyprland/workspaces": {
        "show-special": true,
        "persistent-workspaces": {
            "*":[1,2,3,4,5,6,7]
        },
        "format": "{icon}",
        "format-icons": {
            "active": "",
            "empty": "",
            "default": "",
            "urgent": "",
            "special": "󰠱"
        }
    }
}

